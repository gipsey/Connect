<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:padding="@dimen/spacingLarge">

    <TextView
        android:id="@+id/roomName_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="7"
        android:ellipsize="end"
        android:gravity="center_vertical|start"
        android:singleLine="true"
        android:textSize="@dimen/textSizeLarge"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="2"
        android:descendantFocusability="blocksDescendants"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/addNew_imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:paddingEnd="@dimen/spacingNormal"
            android:paddingStart="@dimen/spacingNormal"
            android:src="@drawable/ic_add_circle_black_24dp"/>

        <TextView
            android:id="@+id/occupantsNumber_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_toStartOf="@id/addNew_imageButton"
            android:ellipsize="end"
            android:paddingEnd="@dimen/spacingNormal"
            android:paddingStart="@dimen/spacingNormal"
            android:textSize="@dimen/textSizeLarge"/>
    </RelativeLayout>
</LinearLayout>